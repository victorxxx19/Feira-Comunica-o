    <main>
        <div class="filtro-container">
            <div class="row">
                <div class="input-field col s12 m3">
                    <label for="filtro-codigo">Buscar por C√≥digo</label>
                    <div class="input-box">
                        <input id="filtro-codigo" type="text">
                    </div>
                </div>
                <div class="input-field col s12 m4">
                    <label for="filtro-descricao">Buscar por Descri√ß√£o</label>
                    <div class="input-box">
                        <input id="filtro-descricao" type="text">
                    </div>
                </div>
                <div class="input-field col s12 m3">
                    <label>Filtrar por Cliente</label>
                    <div class="input-box">
                        <select id="filtro-cliente">
                            <option value="" selected>Todos os Clientes</option>
                        </select>
                    </div>
                </div>
                <div class="input-field col s12 m2">
                    <button id="btn-limpar-filtros" class="btn-flat waves-effect">LIMPAR</button>
