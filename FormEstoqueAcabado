        <div id="loader">
            <div class="preloader-wrapper big active">
                <div class="spinner-layer spinner-blue-only">
                    <div class="circle-clipper left"><div class="circle"></div></div>
                    <div class="gap-patch"><div class="circle"></div></div>
                    <div class="circle-clipper right"><div class="circle"></div></div>
                </div>
            </div>
        </div>

        <div id="conteudo-estoque" style="display:none;">
            <div class="section-card">
                <h5 class="section-title">
                    <i class="material-icons">inventory_2</i>
                    Produtos em Estoque
                </h5>
                <div class="responsive-table">
                    <table id="tabela-estoque" class="highlight">
                        <thead>
                            <tr>
                                <th>C√≥d. Produto</th>
                                <th>Descri√ß√£o</th>
                                <th>Cliente</th>
                                <th class="text-right">Saldo Atual (Unid.)</th>
                                <th class="text-center">√öltima Movimenta√ß√£o</th>
                            </tr>
                        </thead>
                        <tbody id="tabela-estoque-corpo"></tbody>
                    </table>
                </div>
                <p id="msg-sem-estoque" class="msg-vazio">Nenhum produto em estoque encontrado.</p>
            </div>
        </div>
    </main>

    <div id="modal-detalhes" class="modal">
        <div class="modal-content">
            <div id="modal-header">
                <h4 id="modal-titulo">Log de Movimenta√ß√£o</h4>
                <p id="modal-subtitulo">...</p>
            </div>
            
            <div id="modal-loader">
                <div class="preloader-wrapper active">
                    <div class="spinner-layer spinner-blue-only">
                        <div class="circle-clipper left"><div class="circle"></div></div>
                        <div class="gap-patch"><div class="circle"></div></div>
                        <div class="circle-clipper right"><div class="circle"></div></div>
                    </div>
                </div>
            </div>
            
            <div id="modal-corpo"></div>
        </div>
        
        <div class="modal-footer">
            <button class="modal-close btn-flat waves-effect">Fechar</button>
