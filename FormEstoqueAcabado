    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script>
        let globalCache = {
            produtosAgrupados: [],
            clientes: new Set()
        };
        let modalInstance;

        document.addEventListener("DOMContentLoaded", function() {
            console.log('üöÄ Inicializando aplica√ß√£o...');
            
            // Inicializa select do Materialize
            const selects = document.querySelectorAll('.input-box select');
            M.FormSelect.init(selects);
            
            // Inicializa modal
            const modalElement = document.getElementById('modal-detalhes');
            modalInstance = M.Modal.init(modalElement, {
                dismissible: true,
                opacity: 0.5
            });
            
            // Adiciona event listeners
            document.getElementById('filtro-codigo').addEventListener('keyup', renderizarTabelaEstoque);
            document.getElementById('filtro-descricao').addEventListener('keyup', renderizarTabelaEstoque);
            document.getElementById('filtro-cliente').addEventListener('change', renderizarTabelaEstoque);
            document.getElementById('btn-limpar-filtros').addEventListener('click', limparFiltros);
            
            // Carrega dados
            carregarDados();
        });

        function carregarDados() {
            console.log('üîÑ Carregando dados do servidor...');
            
            document.getElementById('loader').style.display = 'block';
            document.getElementById('conteudo-estoque').style.display = 'none';

            google.script.run
                .withSuccessHandler(onDadosCarregados)
                .withFailureHandler(onFailure)
                .getEstoqueAcabadoAgrupado();
        }

        function onDadosCarregados(dados) {
            console.log('üì¶ Dados recebidos:', dados);
            
            document.getElementById('loader').style.display = 'none';
            
            if (!dados || typeof dados !== 'object') {
                mostrarErro('Nenhum dado retornado do servidor');
                return;
            }
            
            if (dados.sucesso === true) {
                globalCache.produtosAgrupados = dados.produtosAgrupados || [];
                globalCache.clientes = new Set(dados.clientes || []);
                
                console.log('‚úÖ Produtos carregados:', globalCache.produtosAgrupados.length);
                console.log('‚úÖ Clientes √∫nicos:', globalCache.clientes.size);
                
                popularFiltros();
                renderizarTabelaEstoque(); 
                
                document.getElementById('conteudo-estoque').style.display = 'block';
            } else {
                mostrarErro(dados.mensagem || 'Erro desconhecido ao carregar dados');
            }
        }
        
        function popularFiltros() {
            const selCliente = document.getElementById('filtro-cliente');
            selCliente.innerHTML = '<option value="" selected>Todos os Clientes</option>';
            
            const clientesArray = Array.from(globalCache.clientes).sort();
            
            clientesArray.forEach(function(cliente) {
                const option = document.createElement('option');
                option.value = cliente;
                option.textContent = cliente;
                selCliente.appendChild(option);
            });
            
            M.FormSelect.init(selCliente);
        }

        function renderizarTabelaEstoque() {
            const filtroCodigo = document.getElementById('filtro-codigo').value.toUpperCase();
            const filtroDescricao = document.getElementById('filtro-descricao').value.toUpperCase();
            const filtroCliente = document.getElementById('filtro-cliente').value;
            
            const corpoTabela = document.getElementById('tabela-estoque-corpo');
            const msgVazio = document.getElementById('msg-sem-estoque');
            
            corpoTabela.innerHTML = "";
            let html = "";
            let count = 0;

            globalCache.produtosAgrupados.forEach(function(produto) {
                if (filtroCodigo && !produto.codProduto.toUpperCase().includes(filtroCodigo)) {
                    return;
                }
                if (filtroDescricao && !produto.descricao.toUpperCase().includes(filtroDescricao)) {
                    return;
                }
                if (filtroCliente && produto.cliente !== filtroCliente) {
                    return;
                }

                const dataFormatada = new Date(produto.ultimaData).toLocaleDateString('pt-BR');
                const saldoFormatado = formatarNumero(produto.saldo);
                
                html += '<tr class="clickable" onclick="abrirModalDetalhes(\'' + produto.codProduto + '\')">';
                html += '<td>' + produto.codProduto + '</td>';
                html += '<td>' + produto.descricao + '</td>';
                html += '<td>' + produto.cliente + '</td>';
                html += '<td class="text-right total-saldo">' + saldoFormatado + '</td>';
                html += '<td class="text-center">' + dataFormatada + '</td>';
                html += '</tr>';
                
                count++;
            });

            corpoTabela.innerHTML = html;
            
            if (count === 0) {
                if (filtroCodigo || filtroDescricao || filtroCliente) {
                    msgVazio.textContent = "Nenhum produto encontrado com os filtros selecionados.";
                } else {
                    msgVazio.textContent = "Nenhum produto em estoque encontrado.";
                }
                msgVazio.style.display = 'block';
            } else {
                msgVazio.style.display = 'none';
            }
        }
        
        function limparFiltros() {
            document.getElementById('filtro-codigo').value = "";
            document.getElementById('filtro-descricao').value = "";
            document.getElementById('filtro-cliente').value = "";
            
            const selects = document.querySelectorAll('.input-box select');
            M.FormSelect.init(selects);
            
            renderizarTabelaEstoque();
        }

        function onFailure(erro) {
            console.error('‚ùå Erro ao carregar dados:', erro);
            mostrarErro(erro.message || 'Erro ao carregar dados do servidor');
        }
        
        function mostrarErro(mensagem) {
            document.getElementById('loader').style.display = 'none';
            
            const conteudoEstoque = document.getElementById('conteudo-estoque');
            conteudoEstoque.style.display = 'none';
            
            const main = document.querySelector('main');
            
            const errorDiv = document.createElement('div');
            errorDiv.className = 'error-message';
            errorDiv.innerHTML = '<h5><i class="material-icons" style="vertical-align: middle;">error</i> Erro ao carregar dados</h5>' +
                '<p><strong>Detalhes:</strong> ' + mensagem + '</p>' +
                '<p><strong>Poss√≠veis causas:</strong></p>' +
                '<ul>' +
                '<li>A constante NOME_ABA_ESTOQUE_ACABADO n√£o est√° definida no arquivo .gs</li>' +
                '<li>O nome da aba est√° incorreto (deve ser exatamente "Estoque_Acabado")</li>' +
                '<li>A fun√ß√£o getEstoqueAcabadoAgrupado() n√£o existe no arquivo .gs</li>' +
                '<li>H√° erro de sintaxe no c√≥digo backend</li>' +
                '</ul>' +
                '<button onclick="location.reload()" class="btn waves-effect" style="background-color: #37417c;">Tentar Novamente</button>';
            
            main.appendChild(errorDiv);
            
            M.toast({
                html: 'Erro: ' + mensagem, 
                classes: 'red darken-2', 
                displayLength: 5000
            });
        }
        
        function abrirModalDetalhes(codProduto) {
            console.log('üîç Abrindo detalhes para:', codProduto);
            
            const produto = globalCache.produtosAgrupados.find(function(p) {
                return p.codProduto === codProduto;
            });
            
            if (!produto) {
                console.error('‚ùå Produto n√£o encontrado:', codProduto);
                return;
            }

            document.getElementById('modal-titulo').textContent = "Log de Movimenta√ß√£o";
            document.getElementById('modal-subtitulo').textContent = produto.codProduto + ' - ' + produto.descricao;
            document.getElementById('modal-corpo').innerHTML = "";
            document.getElementById('modal-loader').style.display = 'block';
            
            modalInstance.open();
            
            google.script.run
                .withSuccessHandler(onModalDetalhesSuccess)
                .withFailureHandler(onModalFailure)
                .getDetalhesEstoqueAcabado(codProduto);
        }
        
        function onModalDetalhesSuccess(dados) {
            console.log('üìã Detalhes recebidos:', dados);
            
            document.getElementById('modal-loader').style.display = 'none';
            
            if (!dados || dados.sucesso !== true) {
                onModalFailure({ 
                    message: dados ? dados.mensagem : 'Erro desconhecido ao carregar detalhes' 
                });
                return;
            }
            
            let html = '<table class="striped">';
            html += '<thead><tr>';
            html += '<th>Data</th>';
            html += '<th>Descri√ß√£o da Movimenta√ß√£o</th>';
            html += '<th class="text-right">Quantidade</th>';
            html += '</tr></thead>';
            html += '<tbody>';
            
            let saldoTotal = 0;
            
            const detalhesRevertidos = dados.detalhes.slice().reverse();
            
            detalhesRevertidos.forEach(function(mov) {
                const classeQtd = mov.qtd > 0 ? 'mov-positiva' : 'mov-negativa';
                saldoTotal += mov.qtd;
                
                const dataFormatada = new Date(mov.data).toLocaleString('pt-BR', {
                    dateStyle: 'short', 
                    timeStyle: 'short'
                });
                
                html += '<tr>';
                html += '<td>' + dataFormatada + '</td>';
                html += '<td>' + mov.descricao + '</td>';
                html += '<td class="text-right ' + classeQtd + '">' + formatarNumero(mov.qtd) + '</td>';
                html += '</tr>';
            });
            
            html += '<tr style="background-color: #f5f7fa; border-top: 2px solid #37417c;">';
            html += '<td colspan="2" class="text-right" style="font-weight: 700; color: #37417c;">SALDO ATUAL:</td>';
            html += '<td class="text-right total-saldo" style="font-size: 1.1rem;">' + formatarNumero(saldoTotal) + '</td>';
            html += '</tr>';
            html += '</tbody></table>';
            
            document.getElementById('modal-corpo').innerHTML = html;
        }
        
        function onModalFailure(erro) {
            console.error('‚ùå Erro ao carregar detalhes:', erro);
            
            document.getElementById('modal-loader').style.display = 'none';
            document.getElementById('modal-corpo').innerHTML = '<p class="red-text">Erro ao carregar detalhes: ' + erro.message + '</p>';
        }

        function formatarNumero(valor) {
            if (valor === null || valor === undefined || valor === "") {
                return '0';
            }
            
            const num = parseFloat(valor);
            
            if (isNaN(num)) {
                return '0';
            }
            
            return num.toLocaleString('pt-BR', { 
                maximumFractionDigits: 0, 
                minimumFractionDigits: 0 
            });
        }
    </script>
</body>
</html>
